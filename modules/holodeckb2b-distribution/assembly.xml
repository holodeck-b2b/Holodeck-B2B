<!--
  This assembly builds the default Holodeck B2B all-in-one distribution package that includes support for the AS4
  messaging protocol and the default persistency and security providers.
-->
<assembly>
    <id>default</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>holodeckb2b-${project.version}</baseDirectory>
    
    <fileSets>
        <!--
	        Copy base directory structure Holodeck B2B adapted Axis2 base to target
	
	        This includes all relevant configuration files, example data, and key stores 
	        needed for the default security provider.
        -->
        <fileSet>
        	<outputDirectory>.</outputDirectory>
            <directory>basedir</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>.*</exclude>
            </excludes>
        </fileSet>
        <!--
        	Copy the project documentation like README, CHNAGELOG and licenses from the parent
        -->
        <fileSet>
        	<outputDirectory>.</outputDirectory>
            <directory>../..</directory>            
            <includes>
                <include>*</include>
            </includes>
            <excludes>
            	<exclude>modules</exclude>
                <exclude>pom.xml</exclude>
                <exclude>.*</exclude>
            </excludes>
        </fileSet>
        <!--
        	Copy the XML schemas that define the used XML documents from the
        	project modules
        -->
        <!-- From Core module -->
        <fileSet>
            <directory>../holodeckb2b-core/src/main/resources/xsd</directory>
            <outputDirectory>repository/xsd</outputDirectory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <!-- From ebms3/as4 module -->
        <fileSet>
            <directory>../holodeckb2b-ebms3as4/src/main/resources/xsd</directory>
            <outputDirectory>repository/xsd</outputDirectory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <!-- From the default security provider module -->
        <fileSet>
            <directory>../holodeckb2b-security/src/main/resources/xsd</directory>
            <outputDirectory>repository/xsd</outputDirectory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <!--
        	Add the AS4 service to the distribution
        -->
        <fileSet>
            <directory>../holodeckb2b-ebms3as4/target/</directory>
            <outputDirectory>repository/services/</outputDirectory>
            <includes>
                <include>*.aar</include>
            </includes>
        </fileSet>
        
        <!--
            Ensure the Santuario jar with Brainpool support is included in the
            package. As the version has not been finalised we use a local system
            dependency. But since that is ignored due to the relative path, we
            have to manually include the jar here.
            NOTE that this is a temporary solution that is to be removed when
            a version of Santuario with Brainpool support is released
        -->
        <fileSet>
            <directory>../holodeckb2b-security/sec-provider/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
    	<!-- Add the XML schema's from the default included file integration -->
		<dependencySet>
			<outputDirectory>repository/</outputDirectory>
			<includes>
				<include>org.holodeckb2b.extensions:file-backend</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>**/*.xsd</include>
				</includes>
			</unpackOptions>
		</dependencySet>
	    <!--
	    	Add all required libraries to the lib directory
	    -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*:pom:*</exclude>
            </excludes>
            <scope>runtime</scope>
        </dependencySet>
        <!-- The system scope dependencySet allows to include local JARs in the distribution, for example
          patched versions of dependencies not yet available through the central Maven repository -->
<!--        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*:pom:*</exclude>
            </excludes>
            <scope>system</scope>
        </dependencySet>-->
    </dependencySets>
</assembly>
